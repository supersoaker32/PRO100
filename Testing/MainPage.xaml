<Page
    x:Class="Testing.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Testing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="mainGrid" Background="BlanchedAlmond">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="AliceBlue" BorderBrush="Black" BorderThickness="3" Margin="3" CornerRadius="20">
            <Viewbox HorizontalAlignment="Left" Height="65" Margin="30 10 20 10" VerticalAlignment="Center">
                <BitmapIcon UriSource="ms-appx:///Assets/Square44x44Logo.targetsize-24_altform-unplated.png"/>
            </Viewbox>
            
            <TextBlock Margin="0 10 20 0" FontSize="40" Text="Name" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <TextBlock Margin="0 10 20 0" FontSize="30" Text="Title" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Grid.Row="1" Grid.RowSpan="3" Background="AliceBlue" BorderBrush="Black" BorderThickness="3" Margin="3">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
            </Grid.RowDefinitions>
        </Grid>

        <ScrollViewer Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Background="AliceBlue" BorderBrush="Black" BorderThickness="3" Margin="3">
            <StackPanel>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
                <TextBlock FontSize="55" Text="test"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
