<Page
    x:Class="Testing.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Testing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="mainGrid" Background="#330A03">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>

        <MenuBar Height="30" Grid.Row="0" Grid.ColumnSpan="3" Background="AliceBlue" VerticalAlignment="Top">
            <MenuBarItem Height="20" Title="File">
                
            </MenuBarItem>
        </MenuBar>
        <Grid Grid.Row="1" Grid.Column="0" Background="AliceBlue" BorderBrush="#102E66" BorderThickness="8" Margin="3" CornerRadius="20">
            <Viewbox HorizontalAlignment="Left" Height="65" Margin="30 10 20 10" VerticalAlignment="Center">
                <BitmapIcon UriSource="ms-appx:///Assets/Square44x44Logo.targetsize-24_altform-unplated.png"/>
            </Viewbox>
            
            <TextBlock Margin="0 5 20 0" FontSize="40" FontFamily="Assets/Fonts/Bridgnorth-Regular.ttf#Bridgnorth-Regular" Text="Name" TextAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Right" Width="350" TextWrapping="WrapWholeWords"/>
            <TextBlock FontStyle="Italic" Margin="0 35 20 0" FontSize="30" Text="Title" TextAlignment="Right" VerticalAlignment="Center" HorizontalAlignment="Right" Width="350" TextWrapping="WrapWholeWords"/>
        </Grid>

        <Grid x:Name="info" Grid.Row="1" Grid.Column="1" Background="AliceBlue" BorderBrush="#102E66" BorderThickness="8" Margin="3" CornerRadius="20">
            
        </Grid>

        <Grid x:Name="activeStats" Grid.Row="2" Grid.Column="1" Background="AliceBlue" BorderBrush="#102E66" BorderThickness="8" Margin="3" CornerRadius="20">
            
        </Grid>

        <Grid x:Name="spellsAbilities" Grid.Row="3" Grid.Column="1" Background="AliceBlue" BorderBrush="#102E66" BorderThickness="8" Margin="3" CornerRadius="20">
            
        </Grid>

        <Grid x:Name="features" Grid.Row="4" Grid.Column="1" Background="AliceBlue" BorderBrush="#102E66" BorderThickness="8" Margin="3" CornerRadius="20">
            
        </Grid>

        <Grid Grid.Row="2" Grid.RowSpan="3" Background="AliceBlue" Margin="3" BorderBrush="#102E66" BorderThickness="8" CornerRadius="20">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
            </Grid.RowDefinitions>
        </Grid>

        <ScrollViewer Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Background="AliceBlue" BorderBrush="#102E66" BorderThickness="8" Margin="3"  CornerRadius="22">
            <StackPanel x:Name="inventory" CornerRadius="22">
                <Grid BorderBrush="DarkGray" BorderThickness="3" CornerRadius="8">
                    <TextBlock FontSize="55" Text="test"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
